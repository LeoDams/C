void  main (){
	char m[10][10];
	char v[10][10];
	char b[10][10];
	int x,y,acerto = 0, erro = 0;
	for (x = 0; x<=10; x++){
		for (y=0; y<=10; y++){
			v[x][y]= ' ';
			m[x][y]= ' ';
			b[x][y]= ' ';
		}
	}


	 int a,i,c,s1,s2,f1,f2,l1,l2,linha,coluna,matriz[DIM][DIM],matriz2[DIM][DIM];char n;
	    srand( (unsigned)time(NULL) );
    for(i=1 ; i <= 9 ; i++)
        s1=rand()%i;l1=rand()%i;f1=rand()%i;
            if (s1!=f1){s1=s1;}else{{s1=rand()%i;}}if (s1==0){s1=s1+1;}
            if (f1!=l1){f1=f1;}else{{f1=rand()%i;}}if (f1==0){f1=f1+1;}
            if (s1!=l1){l1=l1;}else{{l1=rand()%i;}}if (l1==0){l1=l1+1;}

    srand( (unsigned)time(NULL) );
    for(c=4 ; c <= 9 ; c++)
        s2=rand()%c;l2=rand()%c;f2=rand()%c;
            if (s2!=f2){s2=s2;}else{{s2=rand()%c;}}if (s2==0){s2=s2+1;}
            if (f2!=l2){f2=f2;}else{{f2=rand()%c;}}if (f2==0){f2=f2+1;}
            if (s2!=l2){l2=l2;}else{{l2=rand()%c;}}if (l2==0){l2=l2+1;}


    b[s1][s2]='@';b[f1][f2]='@';b[l1][l2]='@';


	tela(m,v,acerto,erro);
            printf("\n Submarino %d,%d",s1,s2);
            printf("\n Fragata   %d,%d",f1,f2);
            printf("\n Lancha    %d,%d",l1,l2);




	for (;;){
		printf("\n [x] = ");scanf("%d",&x);
		printf("\n [y] = ");scanf("%d",&y);
		if (b[x][y] == '@'){
			m[x][y] = '*';v[x][y] = '@';acerto++;
		} else {
			m[x][y] = '*';v[x][y] = '#';erro++;
		}
    tela(m,v,acerto,erro);
	}
}
